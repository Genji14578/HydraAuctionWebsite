<script>


 function test() {
            function makeTimer() {




                var now = new Date();
                console.log(now);
                now = ((Date.parse(now) + 7 * 60 * 60 * 1000) / 1000);



                    var timeLeft = @endTime-now;

                    var days = Math.floor(timeLeft / 86400);
                    var hours = Math.floor((timeLeft - (days * 86400)) / 3600);
                    var minutes = Math.floor((timeLeft - (days * 86400) - (hours * 3600)) / 60);
                    var seconds = Math.floor((timeLeft - (days * 86400) - (hours * 3600) - (minutes * 60)));

                    if (hours < "10") { hours = "0" + hours; }
                    if (minutes < "10") { minutes = "0" + minutes; }
                    if (seconds < "10") { seconds = "0" + seconds; }

                if (hours == "00" && seconds == "00" && minutes == "00") {

                    $("#hours").html(hours);
                    $("#minutes").html(minutes);
                    $("#seconds").html(seconds);
                    clearInterval(q);
                    $("#status").html("Stop Bidding");
                    document.getElementById("bidding").style.opacity = 0;
                    location.replace("http://localhost:51112/Bill/CreateBill?idBuyer=" + @Model.id_buyer_account
                        + "&idAuc=" + @Model.id + "&finalBid=" +@Model.auction_bid_increment
                    );
                }


                        $("#hours").html(hours);
                        $("#minutes").html(minutes);
                        $("#seconds").html(seconds);







            }

	var q=setInterval(function() {makeTimer(); }, 1000);
}


</script>
<body onload="test()">
