<body>
    <div class="services">
        <div class="container">
            <form method="post" action="@Url.Action("Sell","Auction")" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="product_name">Product Name</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control is-valid" id="product_name" name="product_name" placeholder="Product Name" required />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label for="category">Category</label>
                    <div class="col-md-10">
                        <select name="category" id="category">
                            @foreach (var data in (List<AuctionWeb.Models.Category>)Session["lst_Category"])
                            {
                                <option>@data.category_name</option>
                            }
                        </select>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label for="product_description">Product Description</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" placeholder="product description" id="product_description" name="product_description" required />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label for="product_image">Product Image</label>
                    <div class="col-md-10">
                        <input type="file" class="form-control-file is-valid" id="product_image" name="product_image" required />
                    </div>
                </div>
                <br />
                <div class="form-control">
                    <label for="gap_bid">Minimum Increment</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="gap_bid" name="gap_bid" required />
                    </div>
                </div>
                <br />
                <div class="form-control">
                    <label for="gap_bid">Starting Price</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="min_price" name="min_price" required />
                    </div>
                </div>
                <br />
                <div class="form-control">
                    <label for="start_date">Starting Date</label>
                    <div class="col-md-5">
                        <input type="text" name="start_date" id="start_date" class="form-control is-valid" placeholder="MM/dd/yyyy hh:mm" required />
                    </div>
                </div>
                <br />
                <div class="form-control">
                    <label for="end_date">Ending Date</label>
                    <div class="col-md-5">
                        <input type="text" name="end_date" id="end_date" class="form-control is-valid" placeholder="MM/dd/yyyy hh:mm" required />
                    </div>
                </div>
                <br />
                <div class="form-control">
                    <input type="submit" value="Submit" class="test" id="submit" />
                </div>
            </form>
        </div>
    </div>
