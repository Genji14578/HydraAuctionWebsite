            <div class="services-bottom">
                <div class="row">
                    @foreach (AuctionWeb.Models.Category item in Model)
                    {
                        <div class="col-sm-6 col-md-4 ser">


                            <div class="thumbnail" style="padding-bottom:10px;opacity:1">
                                <a href="~/Auction/ShowAuctionInCategory?id=@item.id"><img src="~/Content/images/@item.avatar" alt=""></a>
                                <div class="caption">
                                    <a href="~/Auction/ShowAuctionInCategory?id=@item.id" style="text-align:center"> <h3>@item.category_name</h3></a>
                                </div>
                            </div>

                        </div>


                    }
                    <div class="clearfix"> </div>
                </div>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
